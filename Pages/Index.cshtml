@page
@model CurrencyConverterApp.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div style="border: 2px solid black; padding: 20px; width: 450px; margin: 0 auto;">
    <div style="text-align: center; margin-bottom: 20px;">
        <h3>Welcome, John Smith!</h3>
        <div style="display: inline-block; text-align: left;">
            <label for="account">Account:</label>
            <select id="account" name="account">
                <option value="1234">1234</option>
                <option value="5678">5678</option>
            </select>
        </div>
        <div style="margin-top: 10px;">
            <label>BALANCE:</label>
            <span style="font-weight: bold;">@Model.Balance.ToString() (CAD)</span>
        </div>
    </div>

    <div style="border: 2px solid black; padding: 20px;">
        <form method="post">
            <div style="margin-bottom: 10px;">
                <label for="amount">Amount:</label>
                <input type="number" id="amount" name="amount" step="0.01" required />
                <select name="currency" style="margin-left: 10px;">
                    <option value="CAD">CAD</option>
                    <option value="USD">USD</option>
                    <option value="MXN">MXN</option>
                    <option value="EUR">EUR</option>
                </select>
            </div>

            <div style="text-align: center;">
                <button type="submit" asp-page-handler="Withdraw"
                    style="margin-right: 20px; padding: 10px 20px; border-radius: 10px; border: 2px solid black;">WITHDRAW</button>
                <button type="submit" asp-page-handler="Deposit"
                    style="padding: 10px 20px; border-radius: 10px; border: 2px solid black;">DEPOSIT</button>
            </div>
        </form>
    </div>
</div>